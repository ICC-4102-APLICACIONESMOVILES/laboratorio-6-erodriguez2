<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.eduardo.lab1.Fragments.ResumenFormsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resumeTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Resumen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/activeForms"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/activeForms"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Activos: 25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resumeTitle"
            app:layout_constraintBottom_toTopOf="@id/unableForms"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/unableForms"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Desactivados: 12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activeForms"
            app:layout_constraintBottom_toTopOf="@id/responsedForms"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/responsedForms"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Respondidos: 4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/unableForms"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/white"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
